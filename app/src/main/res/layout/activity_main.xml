<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="experiment.com.anew.madhu.expense_manager_project.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/expenses"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="177dp"
        android:id="@+id/ExpensesButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/income"
        android:layout_alignTop="@+id/ExpensesButton"
        android:layout_toRightOf="@+id/ExpensesButton"
        android:layout_toEndOf="@+id/ExpensesButton"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/IncomesButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/budget"
        android:layout_below="@+id/ExpensesButton"
        android:layout_alignLeft="@+id/ExpensesButton"
        android:layout_alignStart="@+id/ExpensesButton"
        android:layout_marginTop="35dp"
        android:id="@+id/BudgetButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/report"
        android:layout_alignBottom="@+id/BudgetButton"
        android:layout_alignRight="@+id/IncomesButton"
        android:layout_alignEnd="@+id/IncomesButton"
        android:id="@+id/ReportButton" />

    <TextView
        android:text="   Incomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/IncomesButton"
        android:layout_alignLeft="@+id/IncomesButton"
        android:layout_alignStart="@+id/IncomesButton" />

    <TextView
        android:text="    Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReportButton"
        android:layout_alignLeft="@+id/ReportButton"
        android:layout_alignStart="@+id/ReportButton"
        android:id="@+id/textView6" />

    <TextView
        android:text="   Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/BudgetButton"
        android:layout_alignLeft="@+id/BudgetButton"
        android:layout_alignStart="@+id/BudgetButton" />

    <TextView
        android:text="  Expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/ExpensesButton"
        android:layout_alignLeft="@+id/ExpensesButton"
        android:layout_alignStart="@+id/ExpensesButton" />
</RelativeLayout>
